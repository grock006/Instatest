  <head>
    <meta charset="utf-8">
    <title>Street View containers</title>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDyH6_rxueEsjg0nKXAN23lhziVfY1rirU"></script>
    <script>
      var map;
      var panorama;
      var yosemite = new google.maps.LatLng(<%= @lat %>,<%= @lng %>);

      function initialize() {

        // Set up the map
        var mapOptions = {
          center: yosemite,
          zoom: 18,
          streetViewControl: true
        };
        map = new google.maps.Map(document.getElementById('map-canvas'),
            mapOptions);

        panorama = map.getStreetView();
        panorama.setVisible(true);
        panorama.setPosition(yosemite);
        panorama.setPov(({
          heading: 0,
          pitch: 0
        }));
      }

      function toggleStreetView() {
        var toggle = panorama.getVisible();
        if (toggle == false) {
          panorama.setVisible(true);
        } else {
          panorama.setVisible(false);
        }
      }

google.maps.event.addDomListener(window, 'load', initialize);
    </script>
  </head>
